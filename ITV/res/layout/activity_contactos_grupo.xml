<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout_Splash"
    style="@style/Estilo_LINEARLAYOUT_GLOBAL"
    android:background="@color/verdeOpac_Principal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.itver.itv.groups.ContactosGrupo" >

    <TextView
        android:id="@+id/contactos_grupos_etiq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/name_grupo_contactos_grupo"
        android:textColor="@color/Negro_color"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <ListView
        android:id="@+id/listView_Contactos_Grupos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.06" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_mensaje_Grupo"
            style="@style/Estilo_PERFIL_BOTONES"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/etiq_Btn_contactos_grupo_Mensaje" />

        <Button
            android:id="@+id/button1"
            style="@style/Estilo_PERFIL_BOTONES"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/etiq_Btn_contactos_grupo_Mensaje_Todos" />
    </LinearLayout>

</LinearLayout>