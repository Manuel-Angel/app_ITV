<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Layout_Splash"
    style="@style/Estilo_LINEARLAYOUT_GLOBAL"
    android:background="@color/verdeOpac_Principal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.itver.itv.groups.ContactosGrupo" >

    <TextView
        android:id="@+id/contactos_grupos_etiq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/CONTACTOSGRUPO_Etiq_Tv_nameGroup"
        android:textColor="@color/Negro_color"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <ListView
        android:id="@+id/listView_Contactos_Grupos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/lista_presionada"
        android:layout_weight="1" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_mensaje_Grupo"
            style="@style/Estilo_PERFIL_BOTONES"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="@string/CONTACTOSGRUPO_Etiq_Bn_MensajePrivado" />

        <Button
            android:id="@+id/boton_Mensaje_Enviar"
            style="@style/Estilo_PERFIL_BOTONES"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="@string/CONTACTOSGRUPO_Etiq_Bn_Mensaje_Todos" />
    </LinearLayout>

</LinearLayout>